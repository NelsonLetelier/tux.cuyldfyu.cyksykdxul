            <div class="center_prod_box_big">                             
                <div class="product_img_big">
					<%= link_to image_tag(product.imageUrl, :alt => "detalles", :title => 'detalles', :class => 'product_img', :border=>0), {:controller => "product", :action => "details", :name =>product.name}, :alt =>'detalles' %>
                </div>
                     <div class="details_big_box">
						 <div class="product_title_big"><%=link_to product.name.gsub(/(\/)/,'').gsub(/\((\w*(\w* \w*)*)\)/,''),	 {:controller => "product", :action => "details", :name =>product.name}, :alt => "detalles", :title => "detalles" %></div>
                         <div class="specifications">
							<% product.description.split('++').each do |desc| %>
								<%= desc.split(':')[0] + ":" %><span class="blue"><%= desc.split(':')[1] %></span><br />
							<% end %>
								<p>Encontrado en <%= product.store.split("##").count %> tienda<br /></p>
                         </div>
                     </div>                        
				</div>
